<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

    <!-- Action View -->
        <record id="mentee_student_action" model="ir.actions.act_window">
            <field name="name">Mentee</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_id" ref="mentee_view_tree"/>
            <field name="context">{
                'default_is_mentee': True,
                'search_default_order': 'registration_number asc'
                }</field>
            <field name="domain">[('is_mentee', '=', True)]</field>
        </record>


        <!-- Form View -->
        <record id="view_res_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="mark_as_student"
                            type="object"
                            string="Mark as Student"
                            invisible='is_mentee == 1'/>
                    </header>
                </xpath>

                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page string="Mentee Info" invisible='is_mentee == 0'>
                        <group>
                            <field name="is_mentee"/>
                            <field name="citizen"/>
                            <field name="registration_number"/>
                            <field name="gender"/>
                            <field name="dob"/>
                            <field name="age"/>
                            <field name="join_date"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='company_type']" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="default">individual</attribute>
                </xpath>
                <xpath expr="//field[@name='phone']" position="attributes">
                    <attribute name="required">True</attribute>
                </xpath>
                <xpath expr="//field[@name='email']" position="attributes">
                    <attribute name="required">True</attribute>
                </xpath>
            </field>
        </record>

        <record id="seq_res_partner_mentee" model="ir.sequence">
            <field name="name">Mentee Registration Sequence</field>
            <field name="code">res.partner.mentee</field>
            <field name="prefix"></field> <!-- Kosong karena format akan ditentukan oleh citizen -->
            <field name="padding">4</field> <!-- Panjang digit sequence -->
            <field name="number_increment">1</field> <!-- Inkrement setiap kali sequence digunakan -->
        </record>

        <record id="mentee_view_tree" model="ir.ui.view">
            <field name="name">mentee.view.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Students" default_order="registration_number asc">
                    <field name="registration_number"/>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="join_date"/>
                    <field name="citizen"/>
                    <field name="email"/>
                    <field name="phone"/>
                </tree>   
            </field>
        </record>

    </data>
</odoo>